---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout>
  <Section>
    <div class='flex flex-col justify-between h-full'>
      <h1
        class='text-white leading-none tracking-tighter text-[clamp(4rem,10vw,10vw)]'
      >
        creating experiences users love
      </h1>
      <div class='flex h-40/100'>
        <div class='grow text-white basis-0.5'>left</div>
        <div
          class='flex flex-col justify-between grow text-white basis-0.5 p-4 relative'
        >
          <img
            class='absolute top-0 left-0'
            src='/img/tl.svg'
            height='10'
            width='10'
          />
          <img
            class='absolute top-0 right-0'
            src='/img/tr.svg'
            height='10'
            width='10'
          />
          <img
            class='absolute bottom-0 left-0'
            src='/img/bl.svg'
            height='10'
            width='10'
          />
          <img
            class='absolute bottom-0 right-0'
            src='/img/br.svg'
            height='10'
            width='10'
          />
          <h2 class='text-3xl leading-normal'>
            I donâ€™t design. I solve problems&mdash;by improving digital
            products, user experiences, and the systems behind them.
          </h2>

          <div>
            <div class='flex border-b border-solid border-gray-800 mb-4 pb-4'>
              <div class='grow basis-0.5'>
                <p class='uppercase pt-4'>Who I am</p>
              </div>
              <div class='grow basis-0.5'>
                <p class='border-b border-solid border-gray-800 pb-4 pt-4'>
                  <span class='text-gray-500'>01.</span> Ralph Bolliger
                </p>
                <p class='pt-4'>
                  <span class='text-gray-500'>02.</span> Senior Experience Designer
                </p>
              </div>
            </div>
            <div class='flex'>
              <div class='grow basis-0.5'>
                <p class='uppercase'>Profiles</p>
              </div>
              <div class='grow basis-0.5'>
                <p class='border-b border-solid border-gray-800 pb-4'>
                  <a href='#'><span class='text-gray-500'>01.</span> GitGub</a>
                </p>
                <p class='border-b border-solid border-gray-800 pb-4 pt-4'>
                  <span class='text-gray-500'>02.</span> Google Developer
                </p>
                <p class='border-b border-solid border-gray-800 pb-4 pt-4'>
                  <span class='text-gray-500'>02.</span> QTZ.com
                </p>
                <p class='pt-4'>
                  <span class='text-gray-500'>02.</span> Digital Self-Determination
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Section>
</BaseLayout>
