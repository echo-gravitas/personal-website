---
import Section from '../Section.astro';
import H3 from '../ui/H3.astro';
import statements from '../../data/purpose.json';

const statement =
  statements[Math.floor(Math.random() * statements.length)] ??
  "I'm a passionate product designer dedicated to creating sustainable user experiences with purpose.";
---

<Section id='purpose'>
  <div
    class='flex justify-center items-center h-full bg-[url(/img/clock.svg)] bg-center bg-no-repeat sm:bg-size-[10%] md:bg-size-[90%] lg:bg-size-[33%]'
  >
    <H3
      class='sm:w-1/1 md:w-9/10 lg:w-1/3 text-white text-center'
      set:html={statement}
    />
  </div>
</Section>
